#!/bin/sh

systemctl daemon-reload

if [ "$1" = purge ] && [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule
	db_purge
fi

# no need to run ldconfig anymore, 
# using triggers instead 
# if [ "$1" = "remove" ]; then
	# ldconfig
# fi

echo "Uninstallation Complete"

exit 0

